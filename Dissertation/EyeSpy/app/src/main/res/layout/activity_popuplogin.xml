<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chris.eyespy.LogInActivity">

    <TextView
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="@string/LogInPopupTitle"
        android:textSize="35sp"
        android:layout_marginStart="10dp"
        android:id="@+id/LoginText"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/LoginText"
        android:inputType="textEmailAddress"
        android:hint="@string/EnterEmailHint"
        android:layout_marginStart="10dp"
        android:id="@+id/Email"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/Email"
        android:inputType="textPassword"
        android:hint="@string/EnterPasswordHint"
        android:layout_marginStart="10dp"
        android:id="@+id/Password"/>

    <EditText
        android:id="@+id/UserName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/Password"
        android:hint="@string/EnterUsernameHint"
        android:layout_marginStart="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/UserName"
        android:text="@string/LogInButtonText"
        android:id="@+id/LogInButton"
        android:onClick="onClick"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/LogInButton"
        android:text="@string/SignUpButtonText"
        android:id="@+id/SignUpButton"
        android:onClick="onClick"/>


</RelativeLayout>