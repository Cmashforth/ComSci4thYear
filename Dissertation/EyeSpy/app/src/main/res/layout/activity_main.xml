<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chris.eyespy.MainActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text = "You are not logged In"
        android:textAlignment="center"
        android:textSize="20dp"
        android:id= "@+id/LogInMessage"/>

    <ProgressBar
        android:id="@+id/uploadProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_below="@+id/LogInMessage"
        android:layout_alignParentStart="true"
        android:max="100"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image"
        android:layout_above="@+id/LogInButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/button_image"
            android:layout_height="48dp"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom ="true"
            android:layout_centerHorizontal="true"
            android:text="Camera"
            android:onClick="onClick"/>

        <Button android:id="@+id/LogInButton"
                android:layout_height="48dp"
                android:layout_width= "wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/button_image"
                android:text= "Log In"
                android:onClick="onClick"/>

        <Button android:id="@+id/SignOutButton"
            android:layout_height="48dp"
            android:layout_width= "wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/button_image"
            android:text= "SignOut"
            android:visibility="invisible"
            android:onClick="onClick"/>


        <Button
            android:id="@+id/Wifi"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Wifi"
            android:onClick="onClick"/>

    <Button
        android:id="@+id/getImage"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Get Image"
        android:onClick="onClick"
        android:layout_above="@+id/Wifi"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
