<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chris.eyespy.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text = "You are not logged In"
        android:textAlignment="center"
        android:textSize="20dp"
        android:id= '@+id/LogInMessage'/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        />

        <Button
            android:id="@+id/button_image"
            android:layout_height="48dp"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom ="true"
            android:layout_centerHorizontal="true"
            android:text="Camera"
            android:onClick="takePicture"/>

        <Button android:id="@+id/LogInButton"
                android:layout_height="48dp"
                android:layout_width= "wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/button_image"
                android:text= "Log In"
                android:onClick="changeLogIn"/>

        <Button android:id="@+id/SignOutButton"
            android:layout_height="48dp"
            android:layout_width= "wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/button_image"
            android:text= "SignOut"
            android:visibility="invisible"
            android:onClick="signUserOut"/>

        <Button
            android:id="@+id/GPS_Page"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentBottom ="true"
            android:text="GPS Page"
            android:onClick="changePage"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Wifi"
            android:onClick="changePageWifi"/>

</RelativeLayout>
